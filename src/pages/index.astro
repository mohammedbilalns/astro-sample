---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import { projects } from "../data/projects";
import { services } from "../data/services";
---

<BaseLayout
  title="AevonSolutions – Web Development Company"
  description="We build high-quality web applications for modern businesses."
>
  <!-- Hero -->
  <section id="hero" class="text-center mb-24 opacity-0">
    <h1 class="text-4xl font-bold mb-4">
      We Build High-Quality Web Applications
    </h1>
    <p class="text-gray-600 max-w-2xl mx-auto">
      Custom web solutions focused on performance, scalability, and clean design.
    </p>
  </section>

  <!-- Services -->
  <section id="services" class="mb-24 opacity-0">
    <h2 class="text-3xl font-bold text-center mb-10">Our Services</h2>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {services.map(service => (
        <ServiceCard service={service} />
      ))}
    </div>
  </section>

  <!-- Projects -->
  <section id="projects" class="mb-24 opacity-0">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-3xl font-bold">Our Projects</h2>
      <a href="/contact" class="text-primary font-medium hover:underline">
        Start a Project →
      </a>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <ProjectCard project={project} />
      ))}
    </div>
  </section>
</BaseLayout>

<script>
  import { animate } from "motion";

  animate("#hero", { opacity: 1, y: [50, 0] }, { duration: 0.5 });
  animate("#services", { opacity: 1, y: [50, 0] }, { duration: 0.5, delay: 0.2 });
  animate("#projects", { opacity: 1, y: [50, 0] }, { duration: 0.5, delay: 0.4 });
</script>