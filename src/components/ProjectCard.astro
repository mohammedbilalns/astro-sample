---
const { project } = Astro.props;
---


<article class="border dark:border-gray-800 rounded-2xl overflow-hidden
  bg-white dark:bg-gray-900
  hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
  <img
    src={project.image}
    alt={project.title}
    class="w-full h-48 object-cover"
    loading="lazy"
  />

  <div class="p-6 space-y-4">
    <h3 class="text-xl font-semibold">
      {project.title}
    </h3>

    <p class="text-gray-700 dark:text-gray-300 text-sm">
      {project.description}
    </p>

    <div class="flex flex-wrap gap-2">
      {project.tech.map((t: string) => (
      <span class="text-xs bg-gray-100 dark:bg-gray-800 dark:text-gray-200 px-2 py-1 rounded">
        {t}
      </span>
      ))}
    </div>

    <a
      href={project.liveUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block text-blue-700 dark:text-blue-400 font-medium hover:text-blue-800 dark:hover:text-blue-300 hover:underline"
    >
      View Live â†’
    </a>
  </div>
</article>